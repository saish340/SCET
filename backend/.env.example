# SCET Environment Configuration
# Copy this file to .env and configure as needed

# Application
DEBUG=True
APP_NAME=SCET - Smart Copyright Expiry Tag
APP_VERSION=1.0.0

# Server
HOST=0.0.0.0
PORT=8000

# Database
DATABASE_URL=sqlite:///./scet_database.db

# ML Model
MODEL_PATH=./models
EMBEDDING_MODEL=sentence-transformers/all-MiniLM-L6-v2
MIN_SIMILARITY_THRESHOLD=0.6
FUZZY_MATCH_THRESHOLD=70

# Data Collection
SCRAPING_DELAY=1.0
MAX_SEARCH_RESULTS=20
DATA_UPDATE_INTERVAL_HOURS=24
USER_AGENT=SCET-Research-Bot/1.0 (Educational Research Project)

# Copyright Rules
DEFAULT_COPYRIGHT_DURATION_YEARS=70
CORPORATE_COPYRIGHT_DURATION_YEARS=95
DEFAULT_JURISDICTION=US

# Incremental Learning
RETRAIN_THRESHOLD=100
MIN_CONFIDENCE_SCORE=0.5
